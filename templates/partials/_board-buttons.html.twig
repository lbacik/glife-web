<div class="flex flex-row justify-center mt-16 mb-24">
    <div class="basis-1/2">
        <div class="flex flex-row">
            <div class="basis-1/3">
                <div class="flex items-end justify-end h-full">
                    <button
                            class="hover:bg-blue-500 hover:text-white bg-gray-100 text-blue-600 font-bold py-2 px-4 rounded"
                            data-action="glife#oneStep"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="icon icon-tabler icon-tabler-walk" width="24" height="24" viewBox="0 0 24 24"
                             stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                             stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"
                            />
                            <path d="M13 4m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
                            <path d="M7 21l3 -4" />
                            <path d="M16 21l-2 -4l-3 -3l1 -6" />
                            <path d="M6 12l2 -3l4 -1l3 3l3 1" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="basis-1/3">
                <div class="flex items-end justify-center h-full">
                    <button
                            class="hover:bg-blue-500 hover:text-white bg-gray-100 text-blue-600 font-bold py-2 px-4 rounded"
                            data-action="glife#play"
                    >
                        <svg
                                data-glife-target="playIcon"
                                xmlns="http://www.w3.org/2000/svg"
                                class="icon icon-tabler icon-tabler-player-play"
                                width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                                stroke="currentColor" fill="none" stroke-linecap="round"
                                stroke-linejoin="round"
                        >
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M7 4v16l13 -8z" />
                        </svg>
                        <svg
                                data-glife-target="pauseIcon"
                                xmlns="http://www.w3.org/2000/svg"
                                class="icon icon-tabler icon-tabler-player-pause hidden"
                                width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                                stroke="currentColor" fill="none" stroke-linecap="round"
                                stroke-linejoin="round"
                        >
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M6 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z" />
                            <path d="M14 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="basis-1/3">
                <label class="block text-sm font-medium text-gray-700 dark:text-white">
                    interval
                    <input
                            class="{{ inputClass }}"
                            type="number"
                            name="interval"
                            value="{{ config.interval }}"
                            data-glife-target="interval"
                    />
                </label>
            </div>
        </div>
    </div>
</div>
